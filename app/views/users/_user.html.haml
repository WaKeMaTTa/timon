%tr
  %td
    = link_to user.name, user
  %td
    = link_to user.email, user
  %td
    = simple_form_for user, html: { class: 'form-inline' } do |f|
      .form-group
        = f.select :role, User.roles.keys.map {|role| [role.titleize,role]}, class: 'form-control'
      = f.submit 'Change Role', class: 'btn btn-default'

  %td
    - unless user == current_user || user.admin?
      = link_to('Delete user', user_path(user), data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-xs btn-danger')
